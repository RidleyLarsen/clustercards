<?xml version='1.0' encoding='utf-8'?>
<widget id="xyz.ridley.cardgroups" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ClusterCards</name>
    <description>
        A game 'bout makin' groups of cards.
    </description>
    <author email="hello@ridley.xyz" href="https://ridley.xyz/">
        Ridley Larsen
    </author>
    <icon src="platforms/android/res/mipmap-xhdpi/icon.png" platform="ios" width="57" height="57" density="mdpi" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="23" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
